<!doctype html>
<html lang="pt-br">
<head>
    <title>{% block title %}{{ page.title }}{% endblock %} &mdash; {{ site.title }} &mdash; {{ site.subtitle }}</title>
    <meta charset="utf-8">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    {% block head_meta %}
        <meta name="robots" content="noindex, follow">
    {% endblock %}
    <meta name="theme-color" content="#ffffff">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="apple-touch-startup-image" href="{{ site.url }}/assets/img/jackson/2048x2048.png">

    <link rel="icon" href="{{ site.url }}/assets/img/favicon.ico">
    <link rel="shortcut icon" sizes="76x76" href="{{ site.url }}/assets/img/jackson/76x76.png">
    <link rel="shortcut icon" sizes="120x120" href="{{ site.url }}/assets/img/jackson/120x120.png">
    <link rel="shortcut icon" sizes="128x128" href="{{ site.url }}/assets/img/jackson/128x128.png">
    <link rel="shortcut icon" sizes="152x152" href="{{ site.url }}/assets/img/jackson/152x152.png">
    <link rel="shortcut icon" sizes="196x196" href="{{ site.url }}/assets/img/jackson/196x196.png">
    <link rel="shortcut icon" sizes="512x512" href="{{ site.url }}/assets/img/jackson/512x512.png">
    <link rel="shortcut icon" sizes="1024x1024" href="{{ site.url }}/assets/img/jackson/1024x1024.png">
    <link rel="shortcut icon" sizes="2048x2048" href="{{ site.url }}/assets/img/jackson/2048x2048.png">
    <link rel="apple-touch-icon" sizes="76x76" href="{{ site.url }}/assets/img/jackson/76x76.png">
    <link rel="apple-touch-icon" sizes="120x120" href="{{ site.url }}/assets/img/jackson/120x120.png">
    <link rel="apple-touch-icon" sizes="128x128" href="{{ site.url }}/assets/img/jackson/128x128.png">
    <link rel="apple-touch-icon" sizes="152x152" href="{{ site.url }}/assets/img/jackson/152x152.png">
    <link rel="apple-touch-icon" sizes="196x196" href="{{ site.url }}/assets/img/jackson/196x196.png">
    <link rel="apple-touch-icon" sizes="512x512" href="{{ site.url }}/assets/img/jackson/512x512.png">
    <link rel="apple-touch-icon" sizes="1024x1024" href="{{ site.url }}/assets/img/jackson/1024x1024.png">
    <link rel="apple-touch-icon" sizes="2048x2048" href="{{ site.url }}/assets/img/jackson/2048x2048.png">

    <link rel="alternate" type="application/atom+xml" href="{{ site.url }}/atom.xml" title="{{ site.title }} activity feed" />

    {% block head_styles %}

        <!-- blog -->
        <link rel="stylesheet" href="{{ site.url }}/assets/app.css">

    {% endblock %}

    {% block head_scripts %}
    {% endblock %}
</head>
<body>
<header>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <div class="container">
            <a class="navbar-brand" href="{{ site.url }}/">
                <img src="{{ site.url }}/assets/img/signature.png" alt="{{ site.title }}" />
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse"
                    aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item"><a class="nav-link" href="{{ site.url }}/blog/pt-br">Arquivo</a></li>
                    <li class="nav-item"><a class="nav-link"
                                            href="{{ site.url }}/blog/pt-br/categorias">Categorias</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ site.url }}/blog/pt-br/tags">Tags</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ site.url }}/sobre">Sobre</a></li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<main role="main" class="container">
    <div class="row">
        <div class="col-sm-8">
            {% block content_wrapper %}{% block content %}{% endblock %}{% endblock %}
        </div>
        <div class="col-sm-4 sidebar">
            <div class="card bg-light sidebar-nav">
                <div class="card-header">Patroc√≠nio</div>
                <div class="card-body">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" target="_blank" href="https://github.com/sponsors/adielcristo">
                                GitHub Sponsors
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" target="_blank"
                               href="https://nubank.com.br/pagar/2lya8/sLnsuaYpa3">
                                Pix
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="card bg-light sidebar-nav">
                <div class="card-header">Links</div>
                <div class="card-body">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" target="_blank" href="http://phpba.com.br/">PHPBA</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" target="_blank" href="https://twitter.com/phpwomenbr">PHPWomenBR</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</main>
<footer class="container">
    <span class="text-muted">&copy; {{ "now"|date("Y") }} {{ site.title }}</span>
</footer>

{% block scripts %}

    <!-- blog -->
    <script src="{{ site.url }}/assets/app.js"></script>

    {% if site.google_analytics_tracking_id %}
    <!-- analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id={{ site.google_analytics_tracking_id }}"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', '{{ site.google_analytics_tracking_id }}');
    </script>
    {% endif %}

{% endblock %}

{% block scripts_after %}
{% endblock %}
    </body>
</html>
